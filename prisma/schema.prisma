datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Service {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  serviceName String
  category    ServiceCategory
  price       Float
  imageUrls   String[]  
  description String

  @@map("services")
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  otpCode   String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("otps")
}

enum UserRole {
  ADMIN
  USER
}

enum ServiceCategory {
  HAIR_COLOR
  FACE_MAKEUP
  BLEACH_WAXING
  HAIR_STYLING
  MASSAGE
}
